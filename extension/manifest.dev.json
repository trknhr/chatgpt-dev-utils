{
    "manifest_version": 3,
    "name": "ChatGPT CLI Bridge [DEV]",
    "version": "0.0.1-dev",
    "description": "Bridge between CLI and ChatGPT Web UI via content script (DEV mode).",
    "permissions": [
        "scripting",
        "tabs",
        "activeTab",
        "storage",
        "alarms"
    ],
    "host_permissions": [
        "https://chatgpt.com/"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "https://chatgpt.com/"
            ],
            "js": [
                "content.js"
            ]
        }
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": "icon/icon.png"
    }
}